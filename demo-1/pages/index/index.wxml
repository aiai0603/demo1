<!--index.wxml-->
<view class="container">
      <view class="title">
      第{{indexq+1}}题
      </view>

      <button bindtap="show" wx:if="{{showbu}}">
        开始记忆
      </button>
      <view wx:for="{{question[indexq].text}}" style="color:{{question[indexq].color[index]}};"  wx:if="{{show}}"
      class="question">
            {{item}}
      </view>
      <view  wx:if="{{showq}}" class="questionq">
      {{question[indexq].q}}
      </view>
      <button wx:for="{{question[indexq].choose}}"  wx:if="{{showq}}"   style="margin:30rpx"  bindtap="click"  
      data-index="{{index}}"   data-item="{{question[indexq]}}"  disabled="{{dis}}"> 
            {{item}}
      </button>
      <view style="color:{{askcolor}}">{{ask}}</view>
     <view style="margin:30rpx"> {{timecount}}</view>

</view>

